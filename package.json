{
	"name": "xi",
	"version": "0.1.6",
	"description": "A minimal, fully-trackable coding agent",
	"type": "module",
	"bin": {
		"xi": "./src/index.ts"
	},
	"main": "./src/index.ts",
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"test": "bun test ./test/",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"format": "biome format --write .",
		"check": "biome check --write . && tsc --noEmit",
		"knip": "knip"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.44",
		"@ai-sdk/openai": "^3.0.0",
		"@mariozechner/pi-tui": "^0.52.0",
		"agentfs-sdk": "^0.6.0",
		"ai": "^6.0.0",
		"just-bash": "^2.9.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@types/bun": "latest",
		"@types/node": "^25.3.0",
		"knip": "^5.85.0",
		"typescript": "^5.9.0"
	},
	"keywords": [
		"ai",
		"agent",
		"coding",
		"llm",
		"cli"
	],
	"author": "",
	"license": "MIT"
}
